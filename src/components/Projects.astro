---

interface Project {
  title: string;
  description: string;
  image: any;
  tags: string[];
  url: string;
}

const projects: Project[] = [
  {
    title: "Minijuego: Quiz de preguntas",
    description: "Minijuego de preguntas y respuestas con un tema en común. Basado en Quien quiere ser millonario.",
    image: "/images/QuizzApp.png",
    tags: ["React", "JavaScript", "HTML", "CSS"],
    url: "https://quizz-app-eight.vercel.app/"
  },
  {
    title: "Google Search - Clone",
    description: "Clon de la interfaz de Google Search. Basado en la página de Google Search.",
    image: "/images/GoogleClone.png",
    tags: ["React", "JavaScript", "HTML", "CSS"],
    url: "https://google-clon-homepage.vercel.app/"
  },
  {
    title: "League of Legends Web Idea",
    description: "Aplicación sobre Personajes de League of Legends para practicar maquetado y Animaciones avanzadas.",
    image: "/images/LeagueOfLegendsWeb.png",
    tags: ["React", "JavaScript", "HTML", "CSS", "Vite"],
    url: "https://league-of-legends-three.vercel.app/"
  },
  {
    title: "Portfolio Personal",
    description: "Mi portfolio personal construido con Astro y Tailwind CSS.",
    image: "/images/Portfolio.png",
    tags: ["Astro", "Tailwind CSS", "TypeScript"],
    url: "https://ianredzio-portfolio.vercel.app/"
  }
];
---

<section class="content-container smooth-transition py-2 md:py-6">
  <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 dark:text-white text-center mb-2 sm:mb-4">
    <span class="border-b-2 border-blue-500 dark:border-blue-400 pb-1">Proyectos destacados</span>
  </h2>
  
  <div class="max-w-7xl mx-auto overflow-y-auto max-h-[calc(100vh-var(--nav-height)-5rem)] md:max-h-none px-1 sm:px-2 md:px-4">
    <div class="grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-3 xl:gap-4">
      {projects.map(project => (
        <div class="bg-white dark:bg-[#131339]/50 backdrop-blur-sm rounded-lg border border-gray-200 dark:border-white/10 overflow-hidden flex flex-col h-[230px] sm:h-[250px] md:h-[280px] xl:h-[320px] card-shadow hover:card-shadow-hover hover:translate-y-[-4px] transition-all duration-300 group">
          <div class="h-16 sm:h-20 md:h-28 xl:h-32 bg-gray-100 dark:bg-gray-800 overflow-hidden">
            <img 
              src={typeof project.image === 'string' ? project.image : project.image.src} 
              alt={`Miniatura de ${project.title}`} 
              class="w-full h-full object-cover opacity-90 hover:opacity-100 group-hover:scale-105 transition-all duration-300"
            />
          </div>
          
          <div class="p-2 sm:p-3 md:p-4 flex-1 flex flex-col justify-between">
            <div>
              <h3 class="text-xs sm:text-sm md:text-base xl:text-lg font-bold text-gray-900 dark:text-white mb-1 md:mb-2 truncate group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{project.title}</h3>
              
              <p class="text-gray-600 dark:text-white/80 text-[10px] sm:text-xs md:text-sm line-clamp-2 md:line-clamp-3 mb-1 md:mb-2">
                {project.description}
              </p>
            </div>
            
            <div class="mt-auto">
              <div class="flex flex-wrap gap-1 md:gap-1.5 mb-2 md:mb-3">
                {project.tags.map((tag, index) => (
                  <span 
                    class={`
                      text-[8px] sm:text-[9px] md:text-xs 
                      px-1.5 md:px-2 py-0.5 
                      bg-blue-100 dark:bg-[#0E0E29] text-blue-700 dark:text-blue-300 rounded-full
                      border border-blue-200 dark:border-blue-500/30
                      hover:bg-blue-200 dark:hover:bg-blue-900/40 hover:scale-105 transition-all duration-200
                      ${index >= 2 ? 'hidden lg:inline-block' : ''}
                      ${index >= 3 ? 'lg:hidden' : ''}
                    `}
                  >
                    {tag}
                  </span>
                ))}
                
                {project.tags.length > 2 && (
                  <span class="text-[8px] sm:text-[9px] md:text-xs px-1 py-0.5 text-gray-500 dark:text-white/60 lg:hidden">
                    +{project.tags.length - 2}
                  </span>
                )}
                
                {project.tags.length > 3 && (
                  <span class="text-[8px] sm:text-[9px] md:text-xs px-1 py-0.5 text-gray-500 dark:text-white/60 hidden lg:inline-block">
                    +{project.tags.length - 3}
                  </span>
                )}
              </div>
              
              <a 
                href={project.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-block px-3 py-1.5 sm:px-3 sm:py-2 md:px-4 md:py-2 bg-blue-600 hover:bg-blue-700 text-white text-[10px] sm:text-xs md:text-sm font-medium rounded-lg transition-all duration-200 w-fit hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800"
              >
                Ver proyecto
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const projectImages = document.querySelectorAll('.grid img');
    projectImages.forEach(img => {
      img.addEventListener('error', () => {
        (img as HTMLImageElement).src = "https://via.placeholder.com/800x400/131339/55c1ff?text=Proyecto";
      });
    });
  });
</script>

<style>
  @media (max-width: 480px) {
    .content-container {
      padding: 0 0.5rem;
    }
    
    :global(.xs\:grid-cols-2) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    
    :global(.xs\:px-2) {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
  
  @media (min-width: 481px) and (max-width: 1400px) {
    .content-container {
      padding: 0 0.75rem;
    }
  }
  
  @media (min-width: 1401px) {
    .content-container {
      padding: 0 1rem;
    }
  }
</style> 